<%= form_with(model: @veg, url: new_vegetable_path) do |form| %>
  <%= form.label :name, "Vegetable Name:" %>
  <%= form.text_field :name %> 
  <br>
  <br>
  <%= form.label :season, "Growing Season:" %>
  <%= form.text_field :season %>
  <br>
  <br>
  <%= form.submit "Add Vegetable", class: "btn btn-success add-btn" %>
<% end %>

<%= link_to 'Cancel', vegetables_path, class: "btn btn-outline-success add-btn"%>

 <% if @veg.errors.any? %> 
  <% @veg.errors.full_messages.each do |message|%>
  <p><%= message %></p>
  <% end %>
<% end %>  