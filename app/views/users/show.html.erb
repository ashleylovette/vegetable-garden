<div class="container-fluid text-center user-profile">
  <h1 class="yield-body-header"><%= @user.username.capitalize %>'s Garden Profile</h1>
  <%= gravatar_for @user, size: 200 %>

  <div class="text-center mb-4 mt-4">
    <% if logged_in? && @user == current_user %>
      <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-success"%>
    <% end %>
  </div>
  <h3 class="text-center mt-4">Vegetables</h3>

  <div class="flickr_pagination">
    <%= will_paginate @veggies, :container => false %>
  </div>

  <%= render 'vegetables/vegetable'%>

  <div class="flickr_pagination">
    <%= will_paginate @veggies, :container => false %>
  </div>

</div>
