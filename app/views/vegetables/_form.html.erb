<%= render 'shared/errors', obj: @veg %>
<div class="container">
  <%= form_with(model: @veg) do |form| %>
  <div class="form-group row">
    <%= form.label :name, "Vegetable Name:", class: "p-2" %> 
    <%= form.text_field :name, class: "form-control shadow rounded" %>
  </div>  
  <div class="form-group row">
    <%= form.label :season, "Growing Season:", class: "p-2" %>
    <%= form.text_field :season, class: "form-control shadow rounded" %> 
  </div>
  <div class="form-group row">
    <%= form.label :conditions, "Growing Conditions:", class: "p-2" %> 
    <%= form.text_area :conditions, class: "form-control shadow rounded" %>
  </div>
      
  <div class="form-group row">
    <%= form.label :garden_type, "Garden Type: ", class: "p-2" %> 
    <%= form.collection_select(:garden_type_ids, GardenType.all, :id, :name, 
      {prompt: "Select one or more garden types (optional)"}, {multiple: true, size: 3, class: "form-select shadow rounded"})%>
  </div>
    <br>
  <div class="form-group text-center">
      <%= form.submit(@veg.new_record? ? "Add Vegetable" : "Update Vegetable", class: "btn btn-success add-btn") %>
      <%= link_to 'Cancel', vegetables_path, class: "btn btn-outline-success add-btn"%>
  </div> 
<%end%>
</div>
