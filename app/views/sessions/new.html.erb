<div class="container new-box">
  <h1>Sign in to Vegetable Garden!</h1>
  <%= form_with(scope: :session, url: login_path) do |form| %>
    <div class="form-group pt-3">
      <%= form.label :username, "Username: " %> 
    
      <%= form.text_field :username, class: "form-input" %>
  </div>
    
  <div class="form-group">
    <%= form.label :password, "Password:" %>
    
    <%= form.password_field :password, class: "form-input" %>
  </div> 
    
  <br>
  <div class="text-center">
    <%= form.submit "Log in", class: "btn btn-outline-light btn-lg" %>
    <% end %>
    <%= link_to 'Cancel', root_path, class: "btn btn-outline-success add-btn"%>
  </div>
</div>